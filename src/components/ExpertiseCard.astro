---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="text-center">
  <img src={icon} alt={title} class="w-24 h-24 mx-auto mb-4"/>
  <h3 class="text-lg font-semibold text-primary">{title}</h3>
  <p class="text-gray-600">{description}</p>
</div>