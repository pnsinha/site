---
interface Props {
  name: string;
  title: string;
  image: string;
}

const { name, title, image } = Astro.props;
---

<header class="text-center mb-12">
  <img 
    src={image}
    alt={name}
    class="w-48 h-48 mx-auto mb-6 rounded-full shadow-lg object-cover"
  />
  <h1 class="text-4xl font-bold text-primary mb-2">{name}</h1>
  <p class="text-xl text-secondary italic">{title}</p>
</header>