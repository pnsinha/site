---
interface Props {
  skills: {
    programming: string[];
    geospatial: string[];
    ml: string[];
    cloud: string[];
    other: string[];
  };
}

const { skills } = Astro.props;
---

<section class="mb-12">
  <h2 class="text-2xl font-bold text-primary mb-6">Technical Skills</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <h3 class="font-semibold mb-2">Programming Languages</h3>
      <p class="text-gray-700">{skills.programming.join(", ")}</p>
    </div>
    <div>
      <h3 class="font-semibold mb-2">Geospatial Technologies</h3>
      <p class="text-gray-700">{skills.geospatial.join(", ")}</p>
    </div>
    <div>
      <h3 class="font-semibold mb-2">Machine Learning</h3>
      <p class="text-gray-700">{skills.ml.join(", ")}</p>
    </div>
    <div>
      <h3 class="font-semibold mb-2">Cloud & DevOps</h3>
      <p class="text-gray-700">{[...skills.cloud, ...skills.other].join(", ")}</p>
    </div>
  </div>
</section>